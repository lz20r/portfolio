---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const featured = projects.find((p) => p.featured);
---

<Base
	title='Inicio · Nia Portfolio'
	description='Portafolio hecho con Astro'>
	<Header />

	<main class='mx-auto max-w-6xl px-4'>
		<!-- Hero Section -->
		<section class='py-20 md:py-32 text-center'>
			<div class="relative">
				<!-- Avatar/Imagen de perfil -->
				<div class="w-32 h-32 mx-auto mb-8 rounded-full bg-gradient-to-br from-blue-400 to-purple-600 p-1">
					<div class="w-full h-full bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm">
						<span class="text-4xl font-bold">N</span>
					</div>
				</div>
				
				<h1 class='text-5xl md:text-7xl font-bold mb-6'>
					<span class="bg-gradient-to-r from-blue-400 via-purple-400 to-pink-400 bg-clip-text text-transparent">
						Hola, soy Nia
					</span>
				</h1>
				
				<p class='text-xl md:text-2xl text-gray-300 max-w-3xl mx-auto mb-8 leading-relaxed'>
					Desarrolladora web apasionada por crear experiencias digitales increíbles. 
					Especializada en tecnologías modernas y diseño centrado en el usuario.
				</p>
				
				<!-- CTA Buttons -->
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
					<a href="#projects" 
						class="px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full font-semibold hover:scale-105 transition-transform shadow-lg hover:shadow-xl">
						Ver mis proyectos
					</a>
					<a href="#contact" 
						class="px-8 py-4 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full font-semibold hover:bg-white/20 transition-colors">
						Contáctame
					</a>
				</div>
				
				<!-- Tecnologías -->
				<div class="flex flex-wrap justify-center gap-4 text-sm">
					<span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">React</span>
					<span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">TypeScript</span>
					<span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">Astro</span>
					<span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">Tailwind CSS</span>
					<span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full border border-white/20">Node.js</span>
				</div>
			</div>
		</section>

		<!-- Proyecto Destacado -->
		{featured && (
			<section class='py-16'>
				<div class='bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8 md:p-12'>
					<div class="flex items-center gap-3 mb-6">
						<svg class="w-6 h-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
							<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
						</svg>
						<span class='text-lg font-medium text-yellow-400'>Proyecto destacado</span>
					</div>
					
					<h2 class='text-3xl md:text-4xl font-bold mb-4'>{featured.title}</h2>
					
					{featured.description && (
						<p class='text-lg text-gray-300 mb-6 leading-relaxed'>
							{featured.description}
						</p>
					)}
					
					{featured.tags && (
						<div class='flex flex-wrap gap-2 mb-6'>
							{featured.tags.map((tag) => (
								<span class='px-3 py-1 text-sm bg-white/10 backdrop-blur-sm border border-white/20 rounded-full'>
									{tag}
								</span>
							))}
						</div>
					)}
					
					<div class='flex flex-wrap gap-4'>
						{featured.url && (
							<a
								class='inline-flex items-center gap-2 px-6 py-3 bg-white text-black font-semibold rounded-full hover:bg-gray-100 transition-colors'
								href={featured.url}
								target='_blank'>
								<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
								</svg>
								Ver Demo
							</a>
						)}
						{featured.github && (
							<a
								class='inline-flex items-center gap-2 px-6 py-3 bg-white/10 backdrop-blur-sm border border-white/20 rounded-full hover:bg-white/20 transition-colors'
								href={featured.github}
								target='_blank'>
								<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
									<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
								</svg>
								Ver Código
							</a>
						)}
					</div>
				</div>
			</section>
		)}

		<!-- Sección de Proyectos -->
		<section id='projects' class='py-20'>
			<div class="text-center mb-12">
				<h3 class='text-3xl md:text-4xl font-bold mb-4'>
					<span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
						Mis Proyectos
					</span>
				</h3>
				<p class="text-lg text-gray-300">Una selección de mis trabajos más recientes</p>
			</div>
			
			<div class='grid gap-8 md:grid-cols-2 lg:grid-cols-2'>
				{projects.map((p) => <ProjectCard p={p} />)}
			</div>
		</section>

		<!-- Sección Sobre mí -->
		<section id='about' class='py-20'>
			<div class="grid md:grid-cols-2 gap-12 items-center">
				<div>
					<h3 class='text-3xl md:text-4xl font-bold mb-6'>
						<span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
							Sobre mí
						</span>
					</h3>
					<div class="space-y-4 text-lg text-gray-300 leading-relaxed">
						<p>
							Soy una desarrolladora web apasionada con experiencia en crear aplicaciones modernas y eficientes. 
							Me especializo en tecnologías frontend como React, TypeScript y Tailwind CSS.
						</p>
						<p>
							Siempre estoy aprendiendo nuevas tecnologías y mejorando mis habilidades. 
							Me encanta resolver problemas complejos y crear experiencias de usuario excepcionales.
						</p>
						<p>
							Cuando no estoy programando, disfruto explorando nuevas herramientas de desarrollo, 
							leyendo sobre las últimas tendencias en tecnología y contribuyendo a proyectos de código abierto.
						</p>
					</div>
					
					<!-- Habilidades -->
					<div class="mt-8">
						<h4 class="text-xl font-semibold mb-4">Habilidades principales</h4>
						<div class="grid grid-cols-2 gap-4">
							<div class="space-y-2">
								<div>
									<span class="text-sm text-gray-400">Frontend</span>
									<div class="w-full bg-white/10 rounded-full h-2">
										<div class="bg-gradient-to-r from-blue-400 to-purple-400 h-2 rounded-full w-5/6"></div>
									</div>
								</div>
								<div>
									<span class="text-sm text-gray-400">Backend</span>
									<div class="w-full bg-white/10 rounded-full h-2">
										<div class="bg-gradient-to-r from-blue-400 to-purple-400 h-2 rounded-full w-3/4"></div>
									</div>
								</div>
							</div>
							<div class="space-y-2">
								<div>
									<span class="text-sm text-gray-400">UI/UX</span>
									<div class="w-full bg-white/10 rounded-full h-2">
										<div class="bg-gradient-to-r from-blue-400 to-purple-400 h-2 rounded-full w-4/5"></div>
									</div>
								</div>
								<div>
									<span class="text-sm text-gray-400">DevOps</span>
									<div class="w-full bg-white/10 rounded-full h-2">
										<div class="bg-gradient-to-r from-blue-400 to-purple-400 h-2 rounded-full w-2/3"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				
				<div class="relative">
					<div class="aspect-square bg-gradient-to-br from-blue-400/20 to-purple-600/20 backdrop-blur-sm border border-white/20 rounded-3xl p-8 flex items-center justify-center">
						<div class="text-center">
							<div class="text-6xl mb-4">💻</div>
							<p class="text-lg font-medium">Creando el futuro</p>
							<p class="text-sm text-gray-400">una línea de código a la vez</p>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- Sección de Contacto -->
		<section id='contact' class='py-20'>
			<div class="text-center mb-12">
				<h3 class='text-3xl md:text-4xl font-bold mb-4'>
					<span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
						¿Trabajamos juntos?
					</span>
				</h3>
				<p class="text-lg text-gray-300">Estoy abierta a nuevas oportunidades y colaboraciones</p>
			</div>
			
			<div class="grid md:grid-cols-2 gap-12">
				<!-- Formulario de contacto -->
				<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8">
					<form
						class='space-y-6'
						onsubmit="alert('Esto es un demo. Integra un backend o form service.'); return false;">
						<div>
							<label for="name" class="block text-sm font-medium mb-2">Nombre completo</label>
							<input
								id="name"
								name='name'
								placeholder='Tu nombre'
								class='w-full bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all'
								required
							/>
						</div>
						<div>
							<label for="email" class="block text-sm font-medium mb-2">Email</label>
							<input
								id="email"
								type='email'
								name='email'
								placeholder='tu@email.com'
								class='w-full bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all'
								required
							/>
						</div>
						<div>
							<label for="subject" class="block text-sm font-medium mb-2">Asunto</label>
							<input
								id="subject"
								name='subject'
								placeholder='¿De qué quieres hablar?'
								class='w-full bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all'
								required
							/>
						</div>
						<div>
							<label for="message" class="block text-sm font-medium mb-2">Mensaje</label>
							<textarea
								id="message"
								name='message'
								placeholder='Cuéntame sobre tu proyecto o idea...'
								rows='5'
								class='w-full bg-white/10 backdrop-blur-sm border border-white/20 rounded-xl px-4 py-3 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent transition-all resize-none'
								required
							></textarea>
						</div>
						<button
							type="submit"
							class='w-full px-6 py-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-xl font-semibold hover:scale-[1.02] transition-transform shadow-lg hover:shadow-xl'
						>
							Enviar mensaje
						</button>
					</form>
				</div>
				
				<!-- Información de contacto -->
				<div class="space-y-8">
					<div class="bg-white/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8">
						<h4 class="text-xl font-semibold mb-6">Otras formas de contacto</h4>
						<div class="space-y-4">
							<a href="mailto:nia@example.com" class="flex items-center gap-4 p-4 bg-white/10 rounded-xl hover:bg-white/20 transition-colors group">
								<div class="w-12 h-12 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center">
									<svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
									</svg>
								</div>
								<div>
									<p class="font-medium">Email</p>
									<p class="text-sm text-gray-400">nia@example.com</p>
								</div>
								<svg class="w-5 h-5 text-gray-400 group-hover:text-blue-300 group-hover:translate-x-1 transition-all ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
							
							<a href="https://linkedin.com/in/nia" target="_blank" class="flex items-center gap-4 p-4 bg-white/10 rounded-xl hover:bg-white/20 transition-colors group">
								<div class="w-12 h-12 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
									</svg>
								</div>
								<div>
									<p class="font-medium">LinkedIn</p>
									<p class="text-sm text-gray-400">linkedin.com/in/nia</p>
								</div>
								<svg class="w-5 h-5 text-gray-400 group-hover:text-blue-300 group-hover:translate-x-1 transition-all ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
							
							<a href="https://github.com/nia" target="_blank" class="flex items-center gap-4 p-4 bg-white/10 rounded-xl hover:bg-white/20 transition-colors group">
								<div class="w-12 h-12 bg-gradient-to-r from-blue-400 to-purple-400 rounded-full flex items-center justify-center">
									<svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
										<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
									</svg>
								</div>
								<div>
									<p class="font-medium">GitHub</p>
									<p class="text-sm text-gray-400">github.com/nia</p>
								</div>
								<svg class="w-5 h-5 text-gray-400 group-hover:text-blue-300 group-hover:translate-x-1 transition-all ml-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
								</svg>
							</a>
						</div>
					</div>
					
					<!-- Estado de disponibilidad -->
					<div class="bg-gradient-to-r from-green-500/10 to-blue-500/10 backdrop-blur-sm border border-green-400/30 rounded-3xl p-8">
						<div class="flex items-center gap-3 mb-4">
							<div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
							<span class="text-green-400 font-medium">Disponible para proyectos</span>
						</div>
						<p class="text-sm text-gray-300">
							Actualmente estoy disponible para nuevos proyectos y colaboraciones. 
							¡No dudes en contactarme!
						</p>
					</div>
				</div>
			</div>
	<!-- Sección de Newsletter/Registro -->
	<section class='py-20'>
		<div class="bg-gradient-to-r from-blue-500/10 to-purple-500/10 backdrop-blur-sm border border-white/20 rounded-3xl p-8 md:p-12 text-center">
			<div class="max-w-2xl mx-auto">
				<h3 class='text-3xl md:text-4xl font-bold mb-4'>
					<span class="bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
						¿Te gustaría estar al día?
					</span>
				</h3>
				<p class="text-lg text-gray-300 mb-8">
					Únete a mi comunidad y recibe actualizaciones sobre nuevos proyectos, 
					tutoriales exclusivos y recursos de desarrollo web.
				</p>
				
				<div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
					<a href="/register" 
						class="px-8 py-4 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full font-semibold hover:scale-105 transition-transform shadow-lg hover:shadow-xl">
						<span class="flex items-center gap-2">
							<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
							</svg>
							Registrarme gratis
						</span>
					</a>
					<p class="text-sm text-gray-400">
						Sin spam · Cancela cuando quieras
					</p>
				</div>
				
				<!-- Estadísticas o beneficios -->
				<div class="grid grid-cols-3 gap-4 mt-8 pt-6 border-t border-white/10">
					<div>
						<div class="text-2xl font-bold text-blue-400">50+</div>
						<div class="text-sm text-gray-400">Proyectos</div>
					</div>
					<div>
						<div class="text-2xl font-bold text-purple-400">100+</div>
						<div class="text-sm text-gray-400">Suscriptores</div>
					</div>
					<div>
						<div class="text-2xl font-bold text-green-400">24h</div>
						<div class="text-sm text-gray-400">Respuesta</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	</main>

	<!-- Footer mejorado -->
	<footer class='bg-white/5 backdrop-blur-sm border-t border-white/10 mt-20'>
		<div class='mx-auto max-w-6xl px-4 py-12'>
			<div class="grid md:grid-cols-3 gap-8">
				<div>
					<h4 class="text-xl font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent mb-4">
						Nia · Portfolio
					</h4>
					<p class="text-gray-400 text-sm leading-relaxed">
						Desarrolladora web apasionada por crear experiencias digitales increíbles.
					</p>
				</div>
				
				<div>
					<h5 class="font-semibold mb-4">Enlaces rápidos</h5>
					<div class="space-y-2 text-sm">
						<a href="/#projects" class="block text-gray-400 hover:text-white transition-colors">Proyectos</a>
						<a href="/#about" class="block text-gray-400 hover:text-white transition-colors">Sobre mí</a>
						<a href="/#contact" class="block text-gray-400 hover:text-white transition-colors">Contacto</a>
					</div>
				</div>
				
				<div>
