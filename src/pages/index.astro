---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const featured = projects.find((p) => p.featured);

// Fechas importantes - puedes cambiar estas fechas
const importantDates = [
  {
    name: "Mi Cumpleaños 🎂",
    date: new Date(new Date().getFullYear(), 0, 20), // 20 de enero
    emoji: "🎉",
    color: "from-pink-400 to-purple-500"
  },
  {
    name: "Nuestro Aniversario 💕",
    date: new Date(new Date().getFullYear(), 8, 2), // 2 de septiembre
    emoji: "❤️",
    color: "from-red-400 to-pink-500"
  }
];

// Función para calcular días restantes
function getDaysUntil(targetDate: Date) {
  const today = new Date();
  const currentYear = today.getFullYear();
  
  // Ajustar el año si la fecha ya pasó este año
  let nextDate = new Date(targetDate);
  nextDate.setFullYear(currentYear);
  
  if (nextDate < today) {
    nextDate.setFullYear(currentYear + 1);
  }
  
  const timeDiff = nextDate.getTime() - today.getTime();
  const daysDiff = Math.ceil(timeDiff / (1000 * 3600 * 24));
  
  return {
    days: daysDiff,
    nextDate: nextDate
  };
}
