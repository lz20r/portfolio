---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const featured = projects.find((p) => p.featured);
---

<Base
	title='Inicio · Nia Portfolio'
	description='Portafolio hecho con Astro'>
	<Header />

	<main class='mx-auto max-w-6xl px-4'>
		<section class='py-16'>
			<h1 class='text-4xl font-bold'>Hola, soy Nia</h1>
			<p class='mt-3 text-neutral-300 max-w-2xl'>
				Desarrolladora web. Aquí verás mis proyectos, stack y formas de
				contacto.
			</p>

			{
				featured && (
					<div class='mt-10 rounded-2xl border border-neutral-800 p-6'>
						<p class='text-sm text-neutral-400 mb-2'>
							Proyecto destacado
						</p>
						<h2 class='text-2xl font-semibold'>{featured.title}</h2>
						{featured.description && (
							<p class='mt-2 text-neutral-300'>
								{featured.description}
							</p>
						)}
						<div class='mt-4 flex gap-3 text-sm'>
							{featured.url && (
								<a
									class='underline'
									href={featured.url}
									target='_blank'>
									Demo
								</a>
							)}
							{featured.github && (
								<a
									class='underline'
									href={featured.github}
									target='_blank'>
									GitHub
								</a>
							)}
						</div>
					</div>
				)
			}
		</section>

		<section
			id='projects'
			class='py-12'>
			<h3 class='text-2xl font-semibold mb-6'>Proyectos</h3>
			<div class='grid gap-6 sm:grid-cols-2'>
				{projects.map((p) => <ProjectCard p={p} />)}
			</div>
		</section>

		<section
			id='about'
			class='py-12'>
			<h3 class='text-2xl font-semibold mb-2'>Sobre mí</h3>
			<p class='text-neutral-300 max-w-2xl'>
				Me gusta programar, aprender y construir proyectos útiles.
				(Edita este texto).
			</p>
		</section>

		<section
			id='contact'
			class='py-12'>
			<h3 class='text-2xl font-semibold mb-4'>Contacto</h3>
			<form
				class='max-w-lg space-y-3'
				onsubmit="alert('Esto es un demo. Integra un backend o form service.'); return false;">
				<input
					name='name'
					placeholder='Tu nombre'
					class='w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-2'
				/>
				<input
					type='email'
					name='email'
					placeholder='Email'
					class='w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-2'
				/>
				<textarea
					name='message'
					placeholder='Mensaje'
					rows='4'
					class='w-full bg-neutral-900 border border-neutral-800 rounded-xl px-4 py-2'
				></textarea>
				<button
					class='px-4 py-2 rounded-xl bg-white text-black font-semibold'
					>Enviar</button
				>
			</form>
		</section>
	</main>

	<footer class='mx-auto max-w-6xl px-4 py-10 text-sm text-neutral-400'>
		Hecho con Astro · © {new Date().getFullYear()}
	</footer>
</Base>
