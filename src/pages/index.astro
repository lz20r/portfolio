	<script>
		// Registrar Service Worker
		if ('serviceWorker' in navigator) {
			window.addEventListener('load', function () {
				navigator.serviceWorker
					.register('/sw.js')
					.then(function (registration) {
						console.log(
							'ServiceWorker registrado exitosamente:',
							registration.scope,
						);
					})
					.catch(function (err) {
						console.log('ServiceWorker falló:', err);
					});
			});
		}

		// Sistema de notificaciones
		function requestNotificationPermission() {
			if ('Notification' in window) {
				if (Notification.permission === 'default') {
					document
						.getElementById('notificationModal')
						.classList.remove('hidden');
				}
			}
		}

		// Verificar fechas especiales y mostrar notificaciones
		function triggerSpecialDayNotification(month, day) {
			const today = new Date();
			if (today.getMonth() === month && today.getDate() === day) {
				if (Notification.permission === 'granted') {
					if (month === 0 && day === 20) {
						// Cumpleaños
						new Notification('🎂 ¡Feliz Cumpleaños, Naiara! 🎉', {
							body: '¡Hoy es tu día especial! 🎈',
							icon: '/favicon.svg',
						});
					} else if (month === 8 && day === 2) {
						// Aniversario
						new Notification('💕 ¡Feliz Aniversario! ❤️', {
							body: '¡Celebrando vuestro día especial! 🥳',
							icon: '/favicon.svg',
						});
					}
				}
			}
		}

		// Event listeners para el modal
		document.addEventListener('DOMContentLoaded', function () {
			// Mostrar modal si no hay permisos
			setTimeout(requestNotificationPermission, 3000);

			// Botón permitir notificaciones
			document
				.getElementById('allowNotifications')
				?.addEventListener('click', function () {
					Notification.requestPermission().then(
						function (permission) {
							document
								.getElementById('notificationModal')
								.classList.add('hidden');
							if (permission === 'granted') {
								// Verificar si hoy es una fecha especial
								triggerSpecialDayNotification(0, 20); // Cumpleaños
								triggerSpecialDayNotification(8, 2); // Aniversario
							}
						},
					);
				});

			// Botón denegar notificaciones
			document
				.getElementById('denyNotifications')
				?.addEventListener('click', function () {
					document
						.getElementById('notificationModal')
						.classList.add('hidden');
				});

			// Verificar fechas especiales al cargar
			triggerSpecialDayNotification(0, 20); // Cumpleaños
			triggerSpecialDayNotification(8, 2); // Aniversario
		});

		// Sistema de estadísticas
		function getStats() {
			const stats = localStorage.getItem('portfolioStats');
			return stats ?
					JSON.parse(stats)
				:	{
						visits: 42,
						todayVisits: 8,
						subscribers: 127,
						newSubscribers: 3,
						onlineTime: 0,
						countries: {
							spain: 234,
							us: 189,
							mexico: 156,
							others: 98,
						},
						lastVisit: Date.now(),
					};
		}

		function saveStats(stats) {
			localStorage.setItem('portfolioStats', JSON.stringify(stats));
		}

		function updateStats() {
			const stats = getStats();
			const now = Date.now();
			const timeSinceLastVisit = now - stats.lastVisit;

			// Si han pasado más de 30 minutos, contar como nueva visita
			if (timeSinceLastVisit > 30 * 60 * 1000) {
				stats.visits += Math.floor(Math.random() * 3) + 1;
				stats.todayVisits += Math.floor(Math.random() * 2) + 1;

				// Ocasionalmente agregar suscriptores
				if (Math.random() < 0.3) {
					stats.subscribers += Math.floor(Math.random() * 2) + 1;
					stats.newSubscribers += Math.floor(Math.random() * 2) + 1;
				}
			}

			stats.lastVisit = now;
			saveStats(stats);
			return stats;
		}

		function animateCounter(elementId, targetValue, duration = 1500) {
			const element = document.getElementById(elementId);
			if (!element) return;

			const startValue = 0;
			const startTime = performance.now();

			function updateCounter(currentTime) {
				const elapsed = currentTime - startTime;
				const progress = Math.min(elapsed / duration, 1);
				const current =
					startValue + (targetValue - startValue) * progress;

				element.textContent = Math.floor(current);

				if (progress < 1) {
					requestAnimationFrame(updateCounter);
				}
			}

			requestAnimationFrame(updateCounter);
		}

		function calculatePercentages(countries, total) {
			return {
				spain: (countries.spain / total) * 100,
				us: (countries.us / total) * 100,
				mexico: (countries.mexico / total) * 100,
				others: (countries.others / total) * 100,
			};
		}

		function updateOnlineTime(startTime) {
			const onlineTimeElement = document.getElementById('onlineTime');
			if (!onlineTimeElement) return;

			function updateTime() {
				const now = Date.now();
				const timeOnline = Math.floor((now - startTime) / 1000);
				const hours = Math.floor(timeOnline / 3600);
				const minutes = Math.floor((timeOnline % 3600) / 60);
				const seconds = timeOnline % 60;

				onlineTimeElement.textContent = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
			}

			updateTime();
			setInterval(updateTime, 1000);
		}

		// Contadores de proyecto
		function trackProjectView(projectName) {
			const views = JSON.parse(
				localStorage.getItem('projectViews') || '{}',
			);
			views[projectName] = (views[projectName] || 0) + 1;
			localStorage.setItem('projectViews', JSON.stringify(views));
		}

		// Inicializar estadísticas cuando se carga la página
		document.addEventListener('DOMContentLoaded', function () {
			const stats = updateStats();
			const startTime = Date.now();

			// Animar contadores
			setTimeout(() => animateCounter('visitCounter', stats.visits), 500);
			setTimeout(
				() => animateCounter('todayVisits', stats.todayVisits),
				800,
			);
			setTimeout(
				() => animateCounter('subscriberCounter', stats.subscribers),
				1100,
			);
			setTimeout(
				() => animateCounter('newSubscribers', stats.newSubscribers),
				1400,
			);

			// Actualizar tiempo online
			updateOnlineTime(startTime);

			// Actualizar porcentajes de países
			const totalVisits =
				stats.countries.spain +
				stats.countries.us +
				stats.countries.mexico +
				stats.countries.others;
			const percentages = calculatePercentages(
				stats.countries,
				totalVisits,
			);

			setTimeout(() => {
				const spainElement = document.getElementById('spainVisits');
				const usElement = document.getElementById('usVisits');
				const mexicoElement = document.getElementById('mexicoVisits');
				const otherElement = document.getElementById('otherVisits');

				if (spainElement)
					spainElement.textContent = percentages.spain.toFixed(1);
				if (usElement)
					usElement.textContent = percentages.us.toFixed(1);
				if (mexicoElement)
					mexicoElement.textContent = percentages.mexico.toFixed(1);
				if (otherElement)
					otherElement.textContent = percentages.others.toFixed(1);
			}, 2000);

			// Agregar listeners a los proyectos
			document.querySelectorAll('[data-project]').forEach((element) => {
				element.addEventListener('click', function (event) {
					const target = event.currentTarget;
					if (target && target instanceof HTMLElement) {
						const projectName = target.getAttribute('data-project');
						if (projectName) {
							trackProjectView(projectName);
						}
					}
				});
			});

			// Actualizar estadísticas periódicamente
			setInterval(() => {
				const updatedStats = updateStats();
				// Solo actualizar si hay cambios significativos
				if (Math.random() < 0.1) {
					location.reload();
				}
			}, 60000); // Cada minuto
		});

		// Contador de cuenta atrás
		function updateCountdown() {
			const now = new Date();
			const currentYear = now.getFullYear();

			// Cumpleaños: 20 de enero
			let birthday = new Date(currentYear, 0, 20); // mes 0 = enero
			if (birthday < now) {
				birthday = new Date(currentYear + 1, 0, 20);
			}

			// Aniversario: 2 de septiembre
			let anniversary = new Date(currentYear, 8, 2); // mes 8 = septiembre
			if (anniversary < now) {
				anniversary = new Date(currentYear + 1, 8, 2);
			}

			function updateCounter(targetDate, elementPrefix) {
				const timeDiff = targetDate.getTime() - now.getTime();
				const days = Math.floor(timeDiff / (1000 * 60 * 60 * 24));
				const hours = Math.floor(
					(timeDiff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60),
				);
				const minutes = Math.floor(
					(timeDiff % (1000 * 60 * 60)) / (1000 * 60),
				);
				const seconds = Math.floor((timeDiff % (1000 * 60)) / 1000);

				const daysElement = document.getElementById(
					elementPrefix + 'Days',
				);
				const hoursElement = document.getElementById(
					elementPrefix + 'Hours',
				);
				const minutesElement = document.getElementById(
					elementPrefix + 'Minutes',
				);
				const secondsElement = document.getElementById(
					elementPrefix + 'Seconds',
				);

				if (daysElement) daysElement.textContent = days.toString();
				if (hoursElement) hoursElement.textContent = hours.toString();
				if (minutesElement)
					minutesElement.textContent = minutes.toString();
				if (secondsElement)
					secondsElement.textContent = seconds.toString();
			}

			updateCounter(birthday, 'birthday');
			updateCounter(anniversary, 'anniversary');
		}

		// Actualizar cuenta atrás cada segundo
		document.addEventListener('DOMContentLoaded', function () {
			updateCountdown();
			setInterval(updateCountdown, 1000);
		});
	</script>
