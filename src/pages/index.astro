---
import Base from '../layouts/Base.astro';
import Header from '../components/Header.astro';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';

const featured = projects.find((p) => p.featured);
---

<Base
	title='Naiara Zhiyao · Portfolio'
	description='Desarrolladora graduada en DAM y DAW, especializada en desarrollo web y aplicaciones. Creadora de Cinammon.net'>
	<Header />

	<main class='mx-auto max-w-6xl px-4'>
		<!-- Hero Section -->
		<section class='py-20 md:py-32 text-center'>
			<div class='relative sketch-in'>
				<!-- Avatar/Imagen de perfil -->
				<div
					class='w-32 h-32 mx-auto mb-8 rounded-sketch p-2 border-4 shadow-sketch card-sketch'
					style='background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); border-color: var(--accent-primary); box-shadow: 0 0 30px var(--accent-primary)/40;'>
					<div
						class='w-full h-full backdrop-blur-sm rounded-sketch flex items-center justify-center'
						style='background: var(--bg-primary)/50;'>
						<span
							class='text-4xl font-bold'
							style='color: var(--accent-primary); text-shadow: 0 0 15px var(--accent-primary)/60;'
							>💻</span
						>
					</div>
				</div>

				<h1
					class='text-5xl md:text-7xl font-bold mb-6 font-handwriting'>
					<span
						class='sketch-text doodle-line'
						style='color: var(--accent-primary); text-shadow: 0 0 20px var(--accent-primary)/50;'>
						¡Hola! Soy Naiara 👋
					</span>
				</h1>

				<p
					class='text-xl md:text-2xl max-w-3xl mx-auto mb-8 leading-relaxed font-sketch'
					style='color: var(--text-secondary);'>
					🎓 Graduada en DAM y DAW, actualmente estudiando Arte
					Digital. Creadora de <strong>Cinammon.net</strong> y apasionada
					por el desarrollo web. ⚡
				</p>

				<!-- CTA Buttons -->
				<div
					class='flex flex-col sm:flex-row gap-4 justify-center items-center mb-12'>
					<a
						href='#projects'
						class='px-8 py-4 text-white rounded-sketch font-bold transition-all btn-sketch shadow-sketch-colored'
						style='background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary)); box-shadow: 0 0 20px var(--accent-primary)/50;'
						onmouseover="this.style.boxShadow='0 0 30px var(--accent-primary)/70, 0 0 50px var(--accent-secondary)/40';"
						onmouseout="this.style.boxShadow='0 0 20px var(--accent-primary)/50';">
						📁 Ver mis creaciones
					</a>
					<a
						href='#contact'
						class='px-8 py-4 backdrop-blur-sm border-2 rounded-sketch font-bold transition-colors btn-sketch'
						style='background: var(--bg-primary)/80; border-color: var(--accent-secondary); color: var(--text-primary); box-shadow: 0 0 10px var(--accent-secondary)/30;'
						onmouseover="this.style.borderColor='var(--accent-primary)'; this.style.boxShadow='0 0 20px var(--accent-primary)/50';"
						onmouseout="this.style.borderColor='var(--accent-secondary)'; this.style.boxShadow='0 0 10px var(--accent-secondary)/30';">
						💬 ¡Charlemos!
					</a>
				</div>

				<!-- Tecnologías -->
				<div class='flex flex-wrap justify-center gap-3 text-sm'>
					<span
						class='px-4 py-2 bg-blue-100 border-2 border-blue-300 rounded-sketch btn-sketch marker-highlight'
						>🌐 HTML/CSS</span
					>
					<span
						class='px-4 py-2 bg-purple-100 border-2 border-purple-300 rounded-sketch btn-sketch'
						>⚡ JavaScript</span
					>
					<span
						class='px-4 py-2 bg-green-100 border-2 border-green-300 rounded-sketch btn-sketch'
						>� Python</span
					>
					<span
						class='px-4 py-2 bg-yellow-100 border-2 border-yellow-300 rounded-sketch btn-sketch'
						>☕ Java</span
					>
					<span
						class='px-4 py-2 bg-red-100 border-2 border-red-300 rounded-sketch btn-sketch'
						>🎨 Arte Digital</span
					>
					<span
						class='px-4 py-2 bg-indigo-100 border-2 border-indigo-300 rounded-sketch btn-sketch'
						>� Apps Móviles</span
					>
				</div>
			</div>
		</section>

		<!-- Proyecto Destacado -->
		{
			featured && (
				<section class='py-16'>
					<div class='bg-yellow-50/80 border-4 border-yellow-400 rounded-sketch-lg p-8 md:p-12 card-sketch shadow-sketch-lg'>
						<div class='flex items-center gap-3 mb-6'>
							<span class='text-3xl'>⭐</span>
							<span class='text-lg font-bold text-yellow-700 font-handwriting'>
								¡Mi obra maestra!
							</span>
						</div>

						<h2 class='text-3xl md:text-4xl font-bold mb-4 text-gray-800 sketch-text font-handwriting'>
							{featured.title}
						</h2>

						{featured.description && (
							<p class='text-lg text-gray-600 mb-6 leading-relaxed'>
								{featured.description}
							</p>
						)}

						{featured.tags && (
							<div class='flex flex-wrap gap-2 mb-6'>
								{featured.tags.map((tag) => (
									<span class='px-3 py-1 text-sm bg-white/80 border-2 border-blue-300 rounded-sketch text-blue-700 btn-sketch font-medium'>
										🏷️ {tag}
									</span>
								))}
							</div>
						)}

						<div class='flex flex-wrap gap-4'>
							{featured.url && (
								<a
									class='inline-flex items-center gap-2 px-6 py-3 bg-blue-500 text-white font-bold rounded-sketch hover:bg-blue-600 transition-colors btn-sketch shadow-sketch'
									href={featured.url}
									target='_blank'>
									🌐 Ver en vivo
								</a>
							)}
							{featured.github && (
								<a
									class='inline-flex items-center gap-2 px-6 py-3 bg-white/80 border-2 border-gray-400 rounded-sketch hover:bg-gray-100 hover:border-gray-500 transition-colors btn-sketch text-gray-700 font-bold'
									href={featured.github}
									target='_blank'>
									💻 Ver código
								</a>
							)}
						</div>
					</div>
				</section>
			)
		}

		<!-- Sección de Proyectos -->
		<section
			id='projects'
			class='py-20'>
			<div class='text-center mb-12'>
				<h3
					class='text-3xl md:text-4xl font-bold mb-4 font-handwriting'>
					<span class='text-blue-600 sketch-text doodle-line'>
						🚀 Mi portafolio de proyectos
					</span>
				</h3>
				<p class='text-lg text-gray-600'
					>Una colección de mis aventuras digitales 🎨</p
				>
			</div>

			<div class='grid gap-8 md:grid-cols-2 lg:grid-cols-2'>
				{projects.map((p) => <ProjectCard p={p} />)}
			</div>
		</section>

		<!-- Sección Sobre mí -->
		<section
			id='about'
			class='py-20'>
