---
import type { Project } from '../data/projects';
const { p }: { p: Project } = Astro.props;
---

<article class="group">
	<a
		href={`/projects/${p.slug}`}
		class='block bg-white/10 backdrop-blur-sm border border-white/20 rounded-2xl p-6 hover:bg-white/15 hover:border-white/30 hover:scale-[1.02] transition-all duration-300 shadow-lg hover:shadow-2xl'>
		
		<!-- Badge de proyecto destacado -->
		{p.featured && (
			<div class="flex items-center gap-2 mb-3">
				<span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-yellow-400 to-orange-500 text-black">
					<svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
						<path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"></path>
					</svg>
					Destacado
				</span>
			</div>
		)}
		
		<h4 class='text-xl font-bold mb-3 group-hover:text-blue-300 transition-colors'>{p.title}</h4>
		
		{p.description && (
			<p class='text-gray-300 leading-relaxed mb-4 line-clamp-3'>{p.description}</p>
		)}
		
		{p.tags && (
			<div class='flex flex-wrap gap-2 mb-4'>
				{p.tags.map((tag) => (
					<span class='px-3 py-1 text-xs font-medium bg-gradient-to-r from-blue-500/20 to-purple-500/20 border border-blue-400/30 rounded-full text-blue-200 hover:bg-blue-500/30 transition-colors'>
						{tag}
					</span>
				))}
			</div>
		)}
		
		<!-- Enlaces del proyecto -->
		<div class="flex items-center justify-between mt-4 pt-4 border-t border-white/10">
			<div class="flex gap-3">
				{p.url && (
					<span class="inline-flex items-center gap-1 text-sm text-blue-300 hover:text-blue-200 transition-colors">
						<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
						</svg>
						Demo
					</span>
				)}
				{p.github && (
					<span class="inline-flex items-center gap-1 text-sm text-gray-300 hover:text-white transition-colors">
						<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
							<path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
						</svg>
						GitHub
					</span>
				)}
			</div>
			
			<svg class="w-5 h-5 text-gray-400 group-hover:text-blue-300 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
			</svg>
		</div>
	</a>
</article>
