---
import type { Project } from '../data/projects';
const { p }: { p: Project } = Astro.props;
---

<article class="group card-sketch">
	<a
		href={`/projects/${p.slug}`}
		class='block bg-white/80 backdrop-blur-sm border-2 border-blue-300 rounded-sketch-lg p-6 hover:bg-white/90 hover:border-purple-400 hover:shadow-sketch-lg transition-all duration-300 hand-drawn'>
		
		<!-- Badge de proyecto destacado -->
		{p.featured && (
			<div class="flex items-center gap-2 mb-4">
				<span class="inline-flex items-center px-3 py-1 rounded-sketch bg-yellow-200 border-2 border-yellow-400 text-yellow-800 text-xs font-bold btn-sketch">
					⭐ ¡Destacado!
				</span>
			</div>
		)}
		
		<h4 class='text-xl font-bold mb-3 text-gray-800 group-hover:text-blue-600 transition-colors sketch-text font-handwriting'>
			{p.title}
		</h4>
		
		{p.description && (
			<p class='text-gray-600 leading-relaxed mb-4 line-clamp-3'>{p.description}</p>
		)}
		
		{p.tags && (
			<div class='flex flex-wrap gap-2 mb-4'>
				{p.tags.map((tag) => (
					<span class='px-3 py-1 text-xs font-medium bg-blue-100 border border-blue-300 rounded-sketch text-blue-700 hover:bg-blue-200 transition-colors btn-sketch'>
						🏷️ {tag}
					</span>
				))}
			</div>
		)}
		
		<!-- Enlaces del proyecto -->
		<div class="flex items-center justify-between mt-4 pt-4 border-t-2 border-dashed border-gray-300">
			<div class="flex gap-3">
				{p.url && (
					<span class="inline-flex items-center gap-1 text-sm text-blue-600 hover:text-blue-700 transition-colors font-medium">
						🌐 Demo
					</span>
				)}
				{p.github && (
					<span class="inline-flex items-center gap-1 text-sm text-gray-600 hover:text-gray-800 transition-colors font-medium">
						💻 Código
					</span>
				)}
			</div>
			
			<div class="text-2xl group-hover:translate-x-2 transition-transform">
				➡️
			</div>
		</div>
	</a>
</article>
