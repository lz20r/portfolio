---
import type { Project } from '../data/projects';
const { p }: { p: Project } = Astro.props;
---

<a
	href={`/projects/${p.slug}`}
	class='rounded-2xl border border-neutral-800 p-5 hover:bg-neutral-900 transition block'>
	<h4 class='text-xl font-semibold'>{p.title}</h4>
	{
		p.description && (
			<p class='mt-1 text-neutral-300 line-clamp-2'>{p.description}</p>
		)
	}
	{
		p.tags && (
			<div class='mt-3 flex flex-wrap gap-2 text-xs text-neutral-400'>
				{p.tags.map((t) => (
					<span class='px-2 py-0.5 rounded-full border border-neutral-700'>
						{t}
					</span>
				))}
			</div>
		)
	}
</a>
