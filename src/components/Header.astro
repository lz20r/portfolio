<header class="sticky top-0 z-50 backdrop-blur-md border-b-2 shadow-sketch transition-all duration-300" style="background: var(--bg-primary)/95; border-color: var(--accent-primary);">
	<nav class='mx-auto max-w-6xl px-4 py-4 flex items-center justify-between'>
		<a
			href='/'
			class='text-xl font-bold hover:text-purple-600 transition-colors sketch-text font-handwriting transform hover:scale-105 hover:rotate-1'
			style="color: var(--accent-primary); text-shadow: 0 0 10px var(--accent-primary)/50;"
			>✨ Naiara · Portfolio</a
		>
		<div class='hidden md:flex items-center gap-6 text-sm font-medium'>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-blue-100 transition-all group btn-sketch hover:text-blue-600'
				style="color: var(--text-secondary);"
				href='/#projects'
			>
				📁 Proyectos
			</a>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-purple-100 transition-all group btn-sketch hover:text-purple-600'
				style="color: var(--text-secondary);"
				href='/#about'
			>
				👋 Sobre mí
			</a>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-green-100 transition-all group btn-sketch hover:text-green-600'
				style="color: var(--text-secondary);"
				href='/#contact'
			>
				📧 Contacto
			</a>
			
			<!-- Toggle de modo oscuro -->
			<button
				class='theme-toggle'
				onclick='toggleTheme()'
				aria-label='Cambiar modo oscuro'
				title='Cambiar tema'
			>
				<span class='theme-toggle-icon sun'>☀️</span>
				<span class='theme-toggle-icon moon'>🌙</span>
			</button>
			
			<a
				class='px-6 py-3 text-white rounded-sketch font-bold transition-all btn-sketch shadow-sketch-colored transform hover:scale-105'
				style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));"
				href='/register'
			>
				🌟 ¡Únete!
			</a>
		</div>
		
		<!-- Menú móvil -->
		<button 
			class="md:hidden p-3 rounded-sketch hover:bg-blue-100 transition-colors btn-sketch"
			style="color: var(--text-secondary);"
			id="mobile-menu-button"
			aria-label="Abrir menú"
		>
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</nav>
	
	<!-- Menú móvil desplegable -->
	<div class="md:hidden hidden backdrop-blur-md border-t-2 transition-all duration-300" style="background: var(--bg-primary)/90; border-color: var(--accent-secondary);" id="mobile-menu">
		<div class="px-4 py-3 space-y-2">
			<a href="/#projects" class="block px-4 py-2 rounded-sketch hover:bg-blue-100 transition-colors" style="color: var(--text-secondary);">📁 Proyectos</a>
			<a href="/#about" class="block px-4 py-2 rounded-sketch hover:bg-purple-100 transition-colors" style="color: var(--text-secondary);">👋 Sobre mí</a>
			<a href="/#contact" class="block px-4 py-2 rounded-sketch hover:bg-green-100 transition-colors" style="color: var(--text-secondary);">📧 Contacto</a>
			
			<!-- Toggle móvil -->
			<div class="flex items-center justify-between px-4 py-2">
				<span style="color: var(--text-secondary);">🌙 Modo oscuro</span>
				<button
					class='theme-toggle'
					onclick='toggleTheme()'
					aria-label='Cambiar modo oscuro'
				>
					<span class='theme-toggle-icon sun'>☀️</span>
					<span class='theme-toggle-icon moon'>🌙</span>
				</button>
			</div>
			
			<a href="/register" class="block px-4 py-3 text-white rounded-sketch font-bold text-center mt-3 btn-sketch shadow-sketch" style="background: linear-gradient(135deg, var(--accent-primary), var(--accent-secondary));">🌟 ¡Únete!</a>
		</div>
	</div>
</header>

<script>
	const menuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	menuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script>
