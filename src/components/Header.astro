<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-md border-b-2 border-blue-300 shadow-sketch">
	<nav class='mx-auto max-w-6xl px-4 py-4 flex items-center justify-between'>
		<a
			href='/'
			class='text-xl font-bold text-blue-600 hover:text-purple-600 transition-colors sketch-text font-handwriting transform hover:scale-105 hover:rotate-1'
			>✨ Nia · Portfolio</a
		>
		<div class='hidden md:flex items-center gap-6 text-sm font-medium'>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-blue-100 transition-all group btn-sketch text-gray-700 hover:text-blue-600'
				href='/#projects'
			>
				📁 Proyectos
			</a>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-purple-100 transition-all group btn-sketch text-gray-700 hover:text-purple-600'
				href='/#about'
			>
				👋 Sobre mí
			</a>
			<a
				class='relative px-4 py-2 rounded-sketch hover:bg-green-100 transition-all group btn-sketch text-gray-700 hover:text-green-600'
				href='/#contact'
			>
				📧 Contacto
			</a>
			<a
				class='px-6 py-3 bg-gradient-to-r from-blue-400 to-purple-500 text-white rounded-sketch font-bold hover:from-blue-500 hover:to-purple-600 transition-all btn-sketch shadow-sketch-colored transform hover:scale-105'
				href='/register'
			>
				🌟 ¡Únete!
			</a>
		</div>
		
		<!-- Menú móvil -->
		<button 
			class="md:hidden p-3 rounded-sketch hover:bg-blue-100 transition-colors btn-sketch"
			id="mobile-menu-button"
			aria-label="Abrir menú"
		>
			<svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
			</svg>
		</button>
	</nav>
	
	<!-- Menú móvil desplegable -->
	<div class="md:hidden hidden bg-white/90 backdrop-blur-md border-t-2 border-blue-200" id="mobile-menu">
		<div class="px-4 py-3 space-y-2">
			<a href="/#projects" class="block px-4 py-2 rounded-sketch hover:bg-blue-100 transition-colors text-gray-700">📁 Proyectos</a>
			<a href="/#about" class="block px-4 py-2 rounded-sketch hover:bg-purple-100 transition-colors text-gray-700">👋 Sobre mí</a>
			<a href="/#contact" class="block px-4 py-2 rounded-sketch hover:bg-green-100 transition-colors text-gray-700">📧 Contacto</a>
			<a href="/register" class="block px-4 py-3 bg-gradient-to-r from-blue-400 to-purple-500 text-white rounded-sketch font-bold text-center mt-3 btn-sketch shadow-sketch">🌟 ¡Únete!</a>
		</div>
	</div>
</header>

<script>
	const menuButton = document.getElementById('mobile-menu-button');
	const mobileMenu = document.getElementById('mobile-menu');
	
	menuButton?.addEventListener('click', () => {
		mobileMenu?.classList.toggle('hidden');
	});
</script>
